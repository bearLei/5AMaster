<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_39BCA1">
    <RelativeLayout
        android:id="@+id/home_top_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:gravity="center"
        >
        <!--头像-->
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/head_icon"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:scaleType="center"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            fresco:roundAsCircle="true"
            fresco:placeholderImage = "@mipmap/ic_avatar_default"
            />
        <!--昵称-->
        <TextView
            android:id="@+id/nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:layout_centerVertical="true"
            android:textColor="@color/base_ffffff"
            android:layout_toRightOf="@+id/head_icon"
            android:layout_marginLeft="@dimen/dp_5"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/role_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:layout_centerVertical="true"
            android:textColor="@color/base_ffffff"
            android:layout_toRightOf="@+id/nick_name"
            android:layout_marginLeft="@dimen/dp_3"
            android:textStyle="bold"
            />
        <!--学校名字-->
        <TextView
            android:id="@+id/school_name"
            android:layout_toRightOf="@+id/role_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/base_ffffff"
            android:layout_centerVertical="true"
            android:gravity="center"
            />
        <!--红点-->
        <FrameLayout
            android:id="@+id/forward_msg_list"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_alignParentRight="true"
            >
            <ImageView
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:scaleType="center"
                android:src="@drawable/puti_home_msg"
                />
            <ImageView
                android:id="@+id/red_dog"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:scaleType="center"
                android:src="@drawable/puti_red_dog"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_gravity="right"
                android:visibility="gone"
                />
        </FrameLayout>

    </RelativeLayout>
</LinearLayout>
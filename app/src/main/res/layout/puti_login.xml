<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/puti_login_bg"
    android:gravity="center"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        >
        <TextView
            android:id="@+id/location_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/base_ffffff"
            android:textSize="@dimen/sp_18"
            android:text="深圳市"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/base_ffffff"
            android:textSize="@dimen/sp_18"
            android:text="综合素质评价服务平台"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_15"
        android:padding="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:background="@drawable/puti_shape_cbdadf"
        >
        <EditText
            android:id="@+id/edit_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:hint="admin"
            android:drawableLeft="@drawable/puti_login_account_unselected"
            android:drawablePadding="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/base_dbdbdb"
            android:background="@drawable/puti_login_edit_unselected_bg"
            />
        <EditText
            android:id="@+id/edit_psw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:hint="密码"
            android:paddingLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/base_dbdbdb"
            android:drawableLeft="@drawable/puti_login_psw_unselected"
            android:drawablePadding="@dimen/dp_5"
            android:background="@drawable/puti_login_edit_unselected_bg"
            />
        <LinearLayout
            android:id="@+id/verify_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:visibility="gone"
            >
        <EditText
            android:id="@+id/edit_verify"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:hint="验证码"
            android:paddingLeft="@dimen/dp_10"
            android:drawableLeft="@drawable/puti_login_verify_unselected"
            android:drawablePadding="@dimen/dp_5"
            android:textColor="@color/base_dbdbdb"
            android:background="@drawable/puti_login_edit_unselected_bg"
            />
            <ImageView
                android:id="@+id/verify"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginLeft="@dimen/dp_10"
                />
        </LinearLayout>
        
        <TextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:text="登录"
            android:gravity="center"
            android:textSize="@dimen/dp_16"
            android:textColor="@color/base_ffffff"
            android:layout_marginTop="@dimen/dp_25"
            android:background="@drawable/puti_shape_39bca1"
            />
        
    </LinearLayout>

</LinearLayout>
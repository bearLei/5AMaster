<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/base_f3f3f3"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/base_39BCA1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基本信息"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/base_666666"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            />

        <ImageView
            android:id="@+id/pull_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/puti_down_big"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            />
    </RelativeLayout>
        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/base_ffffff"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            >

            <!--姓名 - 性别-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="left|center_vertical"
                >
                <unit.widget.PutiRecordItem
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:record_title="姓名"
                    />
                <unit.widget.PutiRecordItem
                    android:id="@+id/sex"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:record_title="性别"
                    />
            </LinearLayout>

            <!--婚姻 - 出生日期-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="left|center_vertical"
                >
                <unit.widget.PutiRecordItem
                    android:id="@+id/marital_status"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:record_title="婚否"
                    />
                <unit.widget.PutiRecordItem
                    android:id="@+id/birth"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:record_title="出生日期"
                    />
            </LinearLayout>

            <!--国籍，民族-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="left|center_vertical"
                >
                <unit.widget.PutiRecordItem
                    android:id="@+id/country"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:record_title="国籍"
                    />
                <unit.widget.PutiRecordItem
                    android:id="@+id/nation"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:record_title="民族"
                    />
            </LinearLayout>

            <!--籍贯， - 户口性质-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="left|center_vertical"
                >
                <unit.widget.PutiRecordItem
                    android:id="@+id/native_place"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:record_title="籍贯"
                    />
                <unit.widget.PutiRecordItem
                    android:id="@+id/category"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:record_title="户口性质"
                    />
            </LinearLayout>


            <!--电话-身份证号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="left"
                >
                <unit.widget.PutiRecordItem
                    android:id="@+id/mobile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:record_title="电话"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="left"
                >
                <unit.widget.PutiRecordItem
                    android:id="@+id/id_card"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:record_title="身份证号"
                    />
            </LinearLayout>
            <!--教职工号，入校时间-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="left"
                >
                <unit.widget.PutiRecordItem
                    android:id="@+id/code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:record_title="教职工号"
                    />
                <unit.widget.PutiRecordItem
                    android:id="@+id/own_major"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:record_title="任课专业"
                    />
            </LinearLayout>




            <!--职称级别，技术职称-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="left"
                >
                <unit.widget.PutiRecordItem
                    android:id="@+id/zhichen_level"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:record_title="职称级别"
                    />
                <unit.widget.PutiRecordItem
                    android:id="@+id/current_status"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:record_title="状态"
                    />
            </LinearLayout>



            <!--状态，最高学历-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="left"
                >

                <unit.widget.PutiRecordItem
                    android:id="@+id/height_education"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:record_title="最高学历"
                    />
                <unit.widget.PutiRecordItem
                    android:id="@+id/graduation_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:record_title="毕业时间"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>